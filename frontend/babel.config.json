{
  "ignore": ["/node_modules/"],
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "10"
        }
      }
    ],
    "@babel/preset-react"
  ],
  // "moduleNameMapper": {
  //   "^~/(.*)$": "<rootDir>/src/$1"
  // },
  "plugins": [
    ["@babel/plugin-proposal-class-properties"],
    [
      "babel-plugin-root-import",
      {
        "rootPathPrefix": "~",
        "rootPathSuffix": "src"
      }
    ]
  ]
}
